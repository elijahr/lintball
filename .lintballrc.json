{
  "lintballrc_version": "2",
  "ignores": [
    "*/.git/*",
    "*/node_modules/*",
    "*/package-lock.json",
    "*/test/fixture/*",
    "*/test/target/*",
    "*/test/fixture/target/*",
    "*/tools/.bundle/*",
    "*/tools/asdf/*",
    "*/tools/uncrustify*",
    "*/tools/Gemfile*"
  ],
  "use": {
    "clippy": false,
    "stylua": false,
    "rubocop": false
  }
}
