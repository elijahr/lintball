{
  "check_args": {
    "autoflake": "--check --expand-star-imports --remove-all-unused-imports --remove-duplicate-keys --remove-unused-variables",
    "autopep8": "--aggressive --aggressive --aggressive --diff",
    "black": "--check",
    "clippy": "",
    "docformatter": "--check",
    "isort": "--profile black --check-only",
    "nimpretty": "",
    "prettier": "",
    "prettier-eslint": "",
    "rubocop": "--config '$LINTBALL_DIR/configs/rubocop.yml'",
    "shellcheck": "--external-sources --shell=$lang --severity=style --exclude=SC2164",
    "shfmt": "-d -i 2 -s -ci -ln '$lang'",
    "stylua": "--check",
    "uncrustify": "-c '$LINTBALL_DIR/configs/uncrustify.$lang.cfg'",
    "yamllint": "--strict --config-file '$LINTBALL_DIR/configs/yamllint.yml'"
  },
  "write_args": {
    "autoflake": "--in-place --expand-star-imports --remove-all-unused-imports --remove-duplicate-keys --remove-unused-variables",
    "autopep8": "--aggressive --aggressive --aggressive --in-place",
    "black": "",
    "clippy": "--fix -Z unstable-options",
    "docformatter": "--in-place",
    "isort": "--profile black",
    "nimpretty": "",
    "prettier": "--write",
    "prettier-eslint": "--write",
    "rubocop": "--config '$LINTBALL_DIR/configs/rubocop.yml' --auto-correct-all",
    "shellcheck": "--external-sources --shell=$lang --severity=style --exclude=SC2164",
    "shfmt": "-d -i 2 -s -ci -ln '$lang' -w",
    "stylua": "",
    "uncrustify": "-c '$LINTBALL_DIR/configs/uncrustify.$lang.cfg'",
    "yamllint": "--strict --config-file '$LINTBALL_DIR/configs/yamllint.yml'"
  },
  "ignores": [
    "*/.build/*",
    "*/.bundle/*",
    "*/.cache/*",
    "*/.git/*",
    "*/.hg/*",
    "*/.next/*",
    "*/.serverless_nextjs/*",
    "*/.tmp/*",
    "*/__pycache__/*",
    "*/build/*",
    "*/dist/*",
    "*/Gemfile.lock",
    "*/node_modules/*",
    "*/package-lock.json",
    "*/Pipfile.lock",
    "*/target/*",
    "*/tmp/*",
    "*/vendor/*"
  ]
}
