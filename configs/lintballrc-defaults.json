{
  "check_args": {
    "autoflake": "--check --expand-star-imports --remove-all-unused-imports --remove-duplicate-keys --remove-unused-variables",
    "autopep8": "--aggressive --aggressive --aggressive --diff",
    "black": "--check",
    "clippy": "-- -D clippy::all",
    "docformatter": "--check",
    "isort": "--profile black --check-only",
    "nimpretty": "",
    "prettier": "--config '$LINTBALL_DIR/configs/.prettierrc.json'",
    "prettier-eslint": "--eslint-config-path '$LINTBALL_DIR/configs/.eslintrc.json' --config '$LINTBALL_DIR/configs/.prettierrc.json'",
    "rubocop": "--config '$LINTBALL_DIR/configs/rubocop.yml'",
    "shellcheck": "--external-sources --shell=$lang --severity=style --exclude=SC2164",
    "shfmt": "-d -i 2 -s -ci -ln '$lang'",
    "stylua": "--check",
    "uncrustify": "-c '$LINTBALL_DIR/configs/uncrustify.$lang.cfg'",
    "yamllint": "--strict --config-file '$LINTBALL_DIR/configs/yamllint.yml'"
  },
  "write_args": {
    "autoflake": "--in-place --expand-star-imports --remove-all-unused-imports --remove-duplicate-keys --remove-unused-variables",
    "autopep8": "--aggressive --aggressive --aggressive --in-place",
    "black": "",
    "clippy": "--allow-no-vcs --fix -Z unstable-options -- -D clippy::all",
    "docformatter": "--in-place",
    "isort": "--profile black",
    "nimpretty": "",
    "prettier": "--write --config '$LINTBALL_DIR/configs/.prettierrc.json'",
    "prettier-eslint": "--write --eslint-config-path '$LINTBALL_DIR/configs/.eslintrc.json' --config '$LINTBALL_DIR/configs/.prettierrc.json'",
    "rubocop": "--config '$LINTBALL_DIR/configs/rubocop.yml' --auto-correct-all",
    "shellcheck": "--external-sources --shell=$lang --severity=style --exclude=SC2164",
    "shfmt": "-d -i 2 -s -ci -ln '$lang' -w",
    "stylua": "",
    "uncrustify": "-c '$LINTBALL_DIR/configs/uncrustify.$lang.cfg'",
    "yamllint": "--strict --config-file '$LINTBALL_DIR/configs/yamllint.yml'"
  },
  "use": {
    "autoflake": true,
    "autopep8": true,
    "black": true,
    "clippy": true,
    "docformatter": true,
    "isort": true,
    "nimpretty": true,
    "prettier": true,
    "prettier-eslint": true,
    "rubocop": true,
    "shellcheck": true,
    "shfmt": true,
    "stylua": true,
    "uncrustify": true,
    "yamllint": true
  }
}
