{
  "lintballrc_version": "2",
  "check_args": {
    "autoflake": [
      "{{tool}}",
      "--check",
      "--expand-star-imports",
      "--remove-all-unused-imports",
      "--remove-duplicate-keys",
      "--remove-unused-variables",
      "--ignore-init-module-imports",
      "{{path}}"
    ],
    "autopep8": [
      "{{tool}}",
      "--global-config",
      "{{lintball_dir}}/configs/pyproject.toml",
      "--diff",
      "{{path}}"
    ],
    "black": [
      "{{tool}}",
      "--config",
      "{{lintball_dir}}/configs/pyproject.toml",
      "--check",
      "{{path}}"
    ],
    "clippy": [
      "rustup",
      "run",
      "nightly",
      "cargo",
      "{{tool}}",
      "--",
      "-D",
      "clippy::all"
    ],
    "docformatter": ["{{tool}}", "--check", "{{path}}"],
    "isort": [
      "{{tool}}",
      "--settings-path",
      "{{lintball_dir}}/configs/pyproject.toml",
      "--check-only",
      "{{path}}"
    ],
    "nimpretty": ["{{tool}}", "--out:{{tmp}}", "{{path}}"],
    "prettier": [
      "npm",
      "--prefix={{lintball_dir}}/tools",
      "run",
      "--silent",
      "{{tool}}",
      "--",
      "--config",
      "{{lintball_dir}}/tools/.prettierrc.json",
      "{{path}}"
    ],
    "prettier-eslint": [
      "npm",
      "--prefix={{lintball_dir}}/tools",
      "run",
      "--silent",
      "{{tool}}",
      "--",
      "--eslint-config-path",
      "{{lintball_dir}}/tools/.eslintrc.cjs",
      "--config",
      "{{lintball_dir}}/tools/.prettierrc.json",
      "{{path}}"
    ],
    "pylint": [
      "{{tool}}",
      "-f",
      "{{format}}",
      "--rcfile={{lintball_dir}}/configs/pyproject.toml",
      "{{path}}"
    ],
    "rubocop": [
      "{{tool}}",
      "{{color}}",
      "--config",
      "{{lintball_dir}}/configs/rubocop.yml",
      "{{path}}"
    ],
    "shellcheck": [
      "{{tool}}",
      "--format={{format}}",
      "--color={{color}}",
      "--external-sources",
      "--shell={{lang}}",
      "--severity=style",
      "--enable=check-extra-masked-returns,check-set-e-suppressed,check-unassigned-uppercase,deprecate-which",
      "{{path}}"
    ],
    "shfmt": [
      "{{tool}}",
      "-d",
      "-i",
      "2",
      "-s",
      "-ci",
      "-ln",
      "{{lang}}",
      "{{path}}"
    ],
    "stylua": ["{{tool}}", "--check", "{{path}}"],
    "uncrustify": [
      "{{tool}}",
      "-c",
      "{{lintball_dir}}/configs/uncrustify.{{lang}}.cfg",
      "-f",
      "{{path}}"
    ],
    "yamllint": [
      "{{tool}}",
      "--format",
      "{{format}}",
      "--strict",
      "--config-file",
      "{{lintball_dir}}/configs/yamllint.yml",
      "{{path}}"
    ]
  },
  "write_args": {
    "autoflake": [
      "{{tool}}",
      "--in-place",
      "--expand-star-imports",
      "--remove-all-unused-imports",
      "--remove-duplicate-keys",
      "--remove-unused-variables",
      "--ignore-init-module-imports",
      "{{path}}"
    ],
    "autopep8": [
      "{{tool}}",
      "--global-config",
      "{{lintball_dir}}/configs/pyproject.toml",
      "--in-place",
      "{{path}}"
    ],
    "black": [
      "{{tool}}",
      "--config",
      "{{lintball_dir}}/configs/pyproject.toml",
      "{{path}}"
    ],
    "clippy": [
      "rustup",
      "run",
      "nightly",
      "cargo",
      "{{tool}}",
      "--allow-dirty",
      "--allow-staged",
      "--fix",
      "--",
      "-D",
      "clippy::all"
    ],
    "docformatter": ["{{tool}}", "--in-place", "{{path}}"],
    "isort": [
      "{{tool}}",
      "--settings-path",
      "{{lintball_dir}}/configs/pyproject.toml",
      "{{path}}"
    ],
    "nimpretty": ["{{tool}}", "--out:{{tmp}}", "{{path}}"],
    "prettier": [
      "npm",
      "--prefix={{lintball_dir}}/tools",
      "run",
      "--silent",
      "{{tool}}",
      "--",
      "--write",
      "--config",
      "{{lintball_dir}}/tools/.prettierrc.json",
      "{{path}}"
    ],
    "prettier-eslint": [
      "npm",
      "--prefix={{lintball_dir}}/tools",
      "run",
      "--silent",
      "{{tool}}",
      "--",
      "--write",
      "--eslint-config-path",
      "{{lintball_dir}}/tools/.eslintrc.cjs",
      "--config",
      "{{lintball_dir}}/tools/.prettierrc.json",
      "{{path}}"
    ],
    "pylint": [
      "{{tool}}",
      "-f",
      "{{format}}",
      "--rcfile={{lintball_dir}}/configs/pyproject.toml",
      "{{path}}"
    ],
    "rubocop": [
      "{{tool}}",
      "{{color}}",
      "--config",
      "{{lintball_dir}}/configs/rubocop.yml",
      "--auto-correct-all",
      "{{path}}"
    ],
    "shellcheck": [
      "{{tool}}",
      "--format={{format}}",
      "--color={{color}}",
      "--external-sources",
      "--shell={{lang}}",
      "--severity=style",
      "--enable=check-extra-masked-returns,check-set-e-suppressed,check-unassigned-uppercase,deprecate-which",
      "{{path}}"
    ],
    "shfmt": [
      "{{tool}}",
      "-d",
      "-i",
      "2",
      "-s",
      "-ci",
      "-ln",
      "{{lang}}",
      "-w",
      "{{path}}"
    ],
    "stylua": ["{{tool}}", "{{path}}"],
    "uncrustify": [
      "{{tool}}",
      "-c",
      "{{lintball_dir}}/configs/uncrustify.{{lang}}.cfg",
      "-f",
      "{{path}}"
    ],
    "yamllint": [
      "{{tool}}",
      "--format",
      "{{format}}",
      "--strict",
      "--config-file",
      "{{lintball_dir}}/configs/yamllint.yml",
      "{{path}}"
    ]
  },
  "use": {
    "autoflake": true,
    "autopep8": true,
    "black": true,
    "clippy": true,
    "docformatter": true,
    "isort": true,
    "nimpretty": true,
    "prettier": true,
    "prettier-eslint": true,
    "pylint": true,
    "rubocop": true,
    "shellcheck": true,
    "shfmt": true,
    "stylua": true,
    "uncrustify": true,
    "yamllint": true
  },
  "num_jobs": "auto"
}
