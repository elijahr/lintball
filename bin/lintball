#!/usr/bin/env bash

set -ueo pipefail

LINTBALL_DIR="$(dirname "$(dirname "${BASH_SOURCE[0]}")")"

# shellcheck source=SCRIPTDIR/../lib/utils.bash
source "${LINTBALL_DIR}/lib/utils.bash"

# Load default configs
load_config "${LINTBALL_DIR}/configs/lintballrc-defaults.json"
load_config "${LINTBALL_DIR}/configs/lintballrc-ignores.json"

parse_args "$@"
