#!/usr/bin/env bash

set -ueo pipefail

# path to node_modules/.bin
BIN_DIR="$(dirname "${BASH_SOURCE[0]}")"

if [ -f "${BIN_DIR}/../configs/lintballrc-defaults.json" ]; then
  # path to repo
  LINTBALL_DIR="$(
    cd "${BIN_DIR}/.."
    pwd
  )"
elif [ -d "${BIN_DIR}/../lintball/configs/lintballrc-defaults.json" ]; then
  # path to installation via npm, local
  LINTBALL_DIR="$(
    cd "${BIN_DIR}/../lintball"
    pwd
  )"
elif [ -d "${BIN_DIR}/../node_modules/lintball/configs/lintballrc-defaults.json" ]; then
  # path to installation via npm, global
  LINTBALL_DIR="$(
    cd "${BIN_DIR}/../node_modules/lintball"
    pwd
  )"
else
  echo "Cannot find lintball installation from ${BASH_SOURCE[0]}" >&2
  find "$BIN_DIR/.."
  exit 1
fi

# shellcheck source=SCRIPTDIR/../lib/cli.bash
source "${LINTBALL_DIR}/lib/cli.bash"

cli_entrypoint "$@" || exit $?
